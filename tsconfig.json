{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node", "express"],
    "outDir": "./dist",
    "noImplicitAny": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": ["customTypes", "node_modules/@types"]
  },
  "include": ["./**/*"],
  "exclude": ["./node_modules"]
}
