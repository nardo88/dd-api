{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "noImplicitAny": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@helpers/*": ["./helpers/*"],
      "@routes/*": ["./routes/*"],
      "@controllers/*": ["./controllers/*"],
      "@middleware/*": ["./middleware/*"],
      "@models/*": ["./models/*"],
      "@socket/*": ["./socket/*"],
      "@constants/*": ["./constants/*"],
      "@services/*": ["./services/*"]
    },
    "typeRoots": ["customTypes", "node_modules/@types"]
  },
  "include": ["./**/*"],
  "exclude": ["./node_modules"]
}
